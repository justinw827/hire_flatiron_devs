

<header>

  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark ">
      <a class="navbar-brand" href="/signup">Hire Splat Developers!</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/projects">Jobs <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/about">About</a>
          </li>
        </ul>
        <form class="form-inline mt-2 mt-md-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>
</header>


  <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading"><%= @project.title %></h1>
          <p class="lead text-muted"><%= @project.description %></p>
          <p class="lead text-muted">Budget: $<%= @project.price %>.00</p>
          <p>
            <a href="<%= edit_project_path(@project) %>" class="btn btn-primary my-2">Edit Project</a>
            <a href="<%= project_path(@project)%>" data-method= "delete" class="btn btn-primary my-2">Delete Project</a>
          </p>
        </div>
        <p><%= flash[:notice] %></p>
      </section>


    <br>
    <!-- Review button only show if current user == customer_id of @project -->
    <% if !(@project.review) %>
      <p>Write a review</p>
      <br>
      <%= form_for @review do |f| %>
        <%= f.number_field :rating %>
        <br>
        <%= f.text_area :content %>
        <br>

        <%= hidden_field_tag(:project_id, @project.id) %>

        <%= f.submit "Submit Review" %>
      <% end %>
    <% else %>
      <h2>Project Review</h2>
      <br>
      <p><%= @project.review.rating %></p>
      <p><%= @project.review.content %></p>

      <%= button_to "Delete Review", review_path(@project.review), method: :delete %>
    <% end %>
